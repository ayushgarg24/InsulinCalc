<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teammcgannapps.insulincalc.Calculator"
    tools:showIn="@layout/activity_calculator"
    android:orientation="vertical"
    android:background="#339966">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_activity_calculator"
        android:textSize="56dp"
        android:typeface="monospace"
        android:gravity="center"
        android:textColor="#ffffff"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:id="@+id/title"
        android:layout_weight="7.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_weight="2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/mybutton2"
                android:text="0"
                android:id="@+id/value1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:text=" grams"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="bottom"
                android:id="@+id/grams1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_weight="2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/mybutton2"
                android:text="0"
                android:id="@+id/value2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:text=" grams"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="bottom"
                android:id="@+id/grams2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_weight="2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/mybutton2"
                android:text="0"
                android:id="@+id/value3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:text=" grams"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="bottom"
                android:id="@+id/grams3"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:layout_weight="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="5"
            android:text="0"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/mybutton2"
            android:id="@+id/value4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="5"
            android:text=" grams"
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:id="@+id/grams4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner5"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:layout_weight="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="5"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/mybutton2"
            android:text="0"
            android:id="@+id/value5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="5"
            android:text=" grams"
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:id="@+id/grams5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Addition: "
            android:textColor="#000000"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/mybutton2"
            android:text="0"
            android:id="@+id/manualAddition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="grams"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Blood Sugar: "
            android:textColor="#000000"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/mybutton2"
            android:text="100"
            android:id="@+id/currentBloodSugar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mM/L"
            android:textColor="#000000"
            android:textSize="18dp"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Calculate Dosage"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/calculate"
        android:onClick="startResult"
        android:background="@drawable/mybutton3"
        android:layout_weight="7.5"
        android:layout_margin="8dp"/>

</LinearLayout>
